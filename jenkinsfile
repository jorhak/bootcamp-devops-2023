pipeline {
    agent any
    environment {
        DOCKER_HUB_LOGIN = credentials('docker')
        IMAGE='jenkins'
        REGISTRY='jorhak'
        VERSION='v1'
        SERVER='azureuser@4.246.128.219'
    }
    stages {
        stage('install dependencies') {
            agent{
                docker {
                    image 'node:alpine'
                    args '-u root:root'
                }
            }
            steps {
               sh 'npm install'
            }
        }
        stage ('unit-test'){
            parallel {
                stage('test') {
                    agent{
                        docker {
                            image 'node:alpine'
                            args '-u root:root'
                        }
                    }
                    steps {
                    sh 'npm run test'
                    }
                } 
                stage('coverage') {
                    agent{
                        docker {
                            image 'node:alpine'
                            args '-u root:root'
                        }
                    }
                    steps {
                    sh 'npm install'
                    }
                }                 
            }//parallel
        }         
        stage('build') {
            steps {
               sh 'docker build -t $IMAGE:$VERSION .'
            }
        }
        stage('deploy to hub') {
            steps {
               sh '''
               docker login --username=$DOCKER_HUB_LOGIN_USR --password=$DOCKER_HUB_LOGIN_PSW
               docker tag $IMAGE:$VERSION $REGISTRY/$IMAGE:$VERSION
               docker push $REGISTRY/$IMAGE:$VERSION
               '''
            }
        }
        stage('update compose') {
            steps {
               sh '''
               sed -i -- "s/REGISTRY/$REGISTRY/g" docker-compose.yaml
               sed -i -- "s/REPLACE/$IMAGE/g" docker-compose.yaml
               sed -i -- "s/TAG/$VERSION/g" docker-compose.yaml
               cat docker-compose.yaml
               '''
            }
        }  
        stage('deploy to aws') {
            steps {
                sshagent (['ssh-azure']) {
                    sh 'scp -o StrictHostKeyChecking=no docker-compose.yaml $SERVER:/home/azureuser'
                    sh 'ssh $SERVER docker-compose up -d'
                }
            }
        }                
    }
}
